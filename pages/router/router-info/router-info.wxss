.router-content{
    padding:20rpx 20rpx 130rpx;
}
.router-content .router-overview{
    margin-bottom:30rpx;
}
.router-content .router-overview > .title{
    font-size:40rpx;
    font-weight:600;
}
.router-content .router-overview .desc{
    font-size:28rpx;
    margin:5rpx 0 10rpx;
    overflow:hidden;
}
.router-content .router-overview .keyword{
    display:flex;
    justify-content: space-between;
    margin-bottom:6rpx;
}
.router-content .router-overview .keyword{
    height:40rpx;
    margin-bottom: 10rpx;
    align-items: center;
}
.router-content .router-overview .tag{
    margin-right:10rpx;
    background:#f60;
    color:#fff;
    font-size:24rpx;
    border-radius:6rpx;
    padding:5rpx;
    height:30rpx;
    line-height:30rpx;
}
.router-content .router-overview .price {
    font-size:24rpx;
}
.router-content .router-overview .price .num{
    font-size:40rpx;
    color:#f60;
}
.router-content .router-overview .remark {
    color:#999;
    font-size:28rpx;
    margin-bottom:10rpx;
}
.router-content .router-overview .start{
    color:#f60;
    font-size:32rpx;
    margin-bottom:10rpx;
}
.router-content .router-overview .date {
    display:flex;
    font-size:24rpx;
    justify-content: space-between;
}
.router-content .router-overview .date .scroll-wrap {
    flex: 1;
    overflow: hidden;
}
.router-content .router-overview .date .date-scroll .scroll-item {
    border:1px solid #ddd;
    border-radius:10rpx;
    margin-right:10rpx;
    padding:5rpx 15rpx;
    display:inline-block;
    text-align:center;
}
.router-content .router-overview .date .date-scroll .scroll-item  .date-item{
    display: flex;
    flex:1;
}
.router-content .router-overview .date .date-scroll .scroll-item  .date-price{
    color:#f00;
}
.router-content .router-overview .date .date-btn{
    color: #f00;
    width:80rpx;
    text-align:center;
}
.router-detail .feature{
}
.router-detail .title {
    font-size:34rpx;
    font-weight: 400;
    margin-bottom:20rpx;
    text-align:center;
}
.router-detail .content {
    font-size:32rpx;
    color:#666;
    text-align:left;
    margin-bottom:10rpx;
}
.router-detail .trip .days-list .item{
    margin-bottom: 30rpx;
}
.router-detail .trip .days-list .item-day {
    font-weight:400;
    margin-bottom:20rpx;
}
.router-detail .trip .days-list .item-day .location{
    margin-left:20rpx;
}
.router-detail .trip .days-list .item .provide{
    display:flex;
}
.router-detail .trip .days-list .item .provide{
    font-size:30rpx;
    margin-bottom:10rpx;
}
.router-detail .trip .days-list .item .provide .provide-left{
    width:100rpx;
    color:#999;
}
.router-detail .trip .days-list .item .provide .provide-right{
    flex:1;
    color:#666;
}
.router-detail .cost .include{
    color:#333;
    font-size:30rpx;
}
.router-detail .cost .cost-list{
    color:#666;
    font-size:30rpx;
}
.fixed-bottom{
    position:fixed;
    bottom:0;
    width:100%;
    height:100rpx;
    line-height:100rpx;
    z-index:999;
    box-sizing:border-box;
    background:#fff;
    text-align:center;
    box-shadow:0px -4px 10px rgba(0,0,0,.2);
}
.fixed-bottom .btn-wrap{
    display:flex;
}
.fixed-bottom .btn-wrap .btn{
    width:200rpx;
}
.fixed-bottom .btn-wrap .btn:first-child{
    background:#f7a067;
    color:#fff;
}
.fixed-bottom .btn-wrap .btn:nth-child(2n+2){
    background:#f98133;
    color:#fff;
}
.fixed-bottom .btn-wrap .btn-long{
    flex:1;
    background:#f60;
    color:#fff;
}
