.router-content{
    padding:20rpx;
}
.router-content .router-overview{
    margin-bottom:30rpx;
}
.router-content .router-overview .desc{
    font-size:28rpx;
    margin:5rpx 0 10rpx;
    overflow:hidden;
}
.router-content .router-overview .keyword{
    display:flex;
    justify-content: space-between;
    margin-bottom:6rpx;
}
.router-content .router-overview .keyword{
    height:40rpx;
    margin-bottom: 10rpx;
    align-items: center;
}
.router-content .router-overview .tag{
    margin-right:10rpx;
    background:#f60;
    color:#fff;
    font-size:24rpx;
    border-radius:6rpx;
    padding:5rpx;
    height:30rpx;
    line-height:30rpx;
}
.router-content .router-overview .price {
    font-size:24rpx;
}
.router-content .router-overview .price .num{
    font-size:40rpx;
    color:#f60;
}
.router-content .router-overview .remark {
    color:#999;
    font-size:28rpx;
    margin-bottom:10rpx;
}
.router-content .router-overview .start{
    color:#f60;
    font-size:32rpx;
    margin-bottom:10rpx;
}
.router-content .router-overview .date {
    display:flex;
    font-size:24rpx;
    justify-content: space-between;
}
.router-content .router-overview .date .scroll-wrap {
    flex: 1;
    overflow: hidden;
}
.router-content .router-overview .date .date-scroll .scroll-item {
    border:1px solid #ddd;
    border-radius:10rpx;
    margin-right:10rpx;
    padding:5rpx 15rpx;
    display:inline-block;
    text-align:center;
}
.router-content .router-overview .date .date-scroll .scroll-item  .date-item{
    display: flex;
    flex:1;
}
.router-content .router-overview .date .date-scroll .scroll-item  .date-price{
    color:#f00;
}
.router-content .router-overview .date .date-btn{
    color: #f00;
    width:80rpx;
    text-align:center;
}
