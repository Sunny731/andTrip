/* pages/my/my-index.wxss */
.my-card{
    display:flex;
    padding:20rpx;
    margin:30rpx auto;
    width:85%;
    box-shadow:1px 1px 20px 1px rgba(0,0,0,.2);
    border-radius:10rpx;
}
.my-card .user-img{
    width:200rpx;
    height:200rpx;
    border-radius:100%;
    overflow:hidden;
    margin-right:40rpx;
}
.my-card .user-info{
    flex:1;
}
.my-card .user-info .user-row{
    margin-bottom:10rpx;
}
.menu-list{
    padding:0 20rpx;
}
.menu-list .list-item{
    display:flex;
    height:80rpx;
    line-height:80rpx;
    border-bottom:1rpx solid #ddd;
}
.menu-list .list-item  .menu-icon{
    width:60rpx;
    height:60rpx;
    margin:10rpx 30rpx 0 0;
    overflow:hidden;
}
.menu-list .list-item  .menu-title{
    flex:1
}
.menu-list .list-item  .men-other{
    width:60rpx;
    height:80rpx;
}